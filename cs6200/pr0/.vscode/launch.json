    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) vagrant remote",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/d/dev/gatechprojects/cs6200/pr0/hello.exe",
            "miDebuggerServerAddress": "localhost:2159",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/mnt/d/dev/gatechprojects/cs6200/pr0",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
              },
              "osx": {
                "MIMode": "gdb"
              },
              "windows": {
                "MIMode": "gdb"
              },            
            "sourceFileMap": {
                "/mnt/d/dev/gatechprojects/cs6200/pr0": "d:/dev/gatechprojects/cs6200/pr0"
            },
            // "logging" : {
            //     "engineLogging": true,
            //     "trace": true,
            //     "traceResponse": true
            // },
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "${env:windir}\\system32\\bash.exe",
                "pipeArgs": ["-c"],
                "pipeCwd": "",
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Bash on Windows Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/d/dev/gatechprojects/cs6200/pr0/hello_win.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "/mnt/d/dev/gatechprojects/cs6200/pr0",
            "environment": [],
            "externalConsole": false,
            "sourceFileMap": {
                "/mnt/d/dev/gatechprojects/cs6200/pr0": "d:/dev/gatechprojects/cs6200/pr0"
            },
            // "logging" : {
            //     "engineLogging": true,
            //     "trace": true,
            //     "traceResponse": true
            // },
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "${env:windir}\\system32\\bash.exe",
                "pipeArgs": ["-c"],
                "pipeCwd": "",
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}